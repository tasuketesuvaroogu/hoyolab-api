{
  "name": "@vermaysha/hoyolab-api",
  "version": "2.3.1-beta.0",
  "description": "Its unofficial HoYoLab API Wrapper for getting hoyoverse some in-game data, including Genshin Impact, Honkai Impact 3rd.",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "format": "prettier src/**/* -w",
    "lint": "eslint src/**/* --fix",
    "prepare": "husky install",
    "build:ts": "rimraf dist/ && tsc --build --listEmittedFiles",
    "build:docs": "typedoc",
    "build": "npm run build:docs && npm run build:ts",
    "test": "ava",
    "test:coverage": "c8 ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vermaysha/hoyolab-api.git"
  },
  "keywords": [
    "hoyolab-api",
    "hoyolab",
    "hoyoverse",
    "api",
    "hoyowiki",
    "typescript",
    "genshin-impact",
    "genshin-api",
    "honkai-api"
  ],
  "author": {
    "name": "Ashary Vermaysha",
    "email": "vermaysha@gmail.com"
  },
  "license": "LGPL-2.1-only",
  "bugs": {
    "url": "https://github.com/vermaysha/hoyolab-api/issues"
  },
  "homepage": "https://github.com/vermaysha/hoyolab-api#readme",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=14.13"
  },
  "lint-staged": {
    "**/*.(ts,js)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "timeout": "5m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ]
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.6",
    "typedoc": "^0.23.28",
    "typedoc-plugin-coverage": "^2.0.0",
    "typedoc-plugin-extras": "^2.3.2",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typedoc-plugin-versions": "^0.2.3",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "got": "^12.6.0"
  }
}
